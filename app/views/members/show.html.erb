<section>
  <h1>Member Details</h1>
  <p>
    <strong>Name:</strong>
    <%= @member.name %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @member.description %>
  </p>
  <section class="skills">
    <h2>Skills:</h2>
    <ul>
      <% @member.skills.each do |skill| %>
        <li><%= skill.name %></li>
      <% end %>
    </ul>
  </section>
  <h2>Bands:</h2>
  <ul>
    <% @member.bands.each do |band| %>
      <li><%= band.name %></li>
    <% end %>
  </ul>
  <%= link_to 'Edit', edit_member_path(@member) %> |
  <%= link_to 'Back', members_path %>
</section>