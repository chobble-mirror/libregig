<h1>Edit Band</h1>
<%= form_with(model: @band, local: true) do |form| %>
  <%= form.label :description, "Description" %>
  <%= form.text_area :description %>

  <%= form.label :members, "Members" %>
  <%= form.collection_check_boxes :member_ids, Member.all, :id, :name do |b| %>
    <div class="checkbox">
      <%= b.check_box %>
      <%= b.label %>
    </div>
  <% end %>

  <%= form.submit 'Save', class: 'primary_button' %>
<% end %>