%section
  - if @band.editable?
    %p.text-right
      = link_to "Create event for '#{@band.name}'", |
        url_for(                                    |
          controller: "events",                     |
          action: "new",                            |
          band_id: @band.id                         |
        ),                                          |
        class: "primary_button"                     |
  - if @band.events.any?
    %table
      %thead
        %tr
          %th Name
