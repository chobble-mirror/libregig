- content_for :title, @event.name
%section.md:mr-4.w-full
  %h1.page-heading= @event.name
  %p
    %strong Description:
    = @event.description
  %p
    %strong Date:
    = @event.date&.strftime('%Y-%m-%d')
  %p
    %strong Time:
    = @event.date&.strftime('%H:%M')
  %figure
    %figcaption Bands:
    %ul
      - @event.bands.each do |band|
        %li
          - name = band.name != "" ? band.name : "NOT SET"
          - path = band_path(band)
          - title = band.description
          = link_to (name), path, class: 'break-all', title:
  .mt-4
    = link_to 'Edit', edit_event_path(@event), |
      class: 'primary_button'                  |
    = link_to 'Back', events_path, class: 'secondary_button'
%section
  %ul
    - if @event.date
      %li
        This event is:
        %strong
          = distance_of_time_in_words(Time.now, @event.date)
          from now
    %li
      %strong Versions:
