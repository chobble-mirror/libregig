{
  "language_overrides": {
    "ERB": {
      "formatter": {
        "external": {
          "command": "erb-format",
          "arguments": ["--stdin", "--print-width", "80"]
        }
      }
    },
    "Haml": {
      "soft_wrap": "none"
    }
  },
  "tabs": {
    "git_status": true,
    "close_position": "left",
    "file_icons": true
  }
}
