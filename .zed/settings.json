{
  "languages": {
    "ERB": {
      "formatter": {
        "external": {
          "command": "erb-format",
          "arguments": ["--stdin", "--print-width", "80"]
        }
      }
    },
    "Haml": {
      "soft_wrap": "none"
    },
    "Ruby": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "standardrb",
          "arguments": ["--fix-unsafely", "--stdin", "ignored", "--stderr"]
        }
      }
    }
  },
  "tabs": {
    "git_status": true,
    "close_position": "left",
    "file_icons": true
  }
}
